{
  "name": "prolog-runner",
  "displayName": "Prolog Runner",
  "publisher": "eliasgrewe",
  "description": "Runs your prolog code like a script.",
  "icon": "icon.png",
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sazzledazzle/prolog-runner.git"
  },
  "keywords": [
    "prolog",
    "vscode",
    "extension"
  ],
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:prolog-runner.run",
    "onLanguage:prolog"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prolog-runner.run",
        "title": "â–¶ Run Prolog File"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == prolog",
          "command": "prolog-runner.run",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "prolog",
        "aliases": [
          "Prolog"
        ],
        "extensions": [
          ".pl",
          ".pro",
          ".P"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vscode": "^1.1.37"
  }
}
